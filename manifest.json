{
  "manifest_version": 3,
  "name": "Obsidian Smart History",
  "version": "3.0.1",
  "description": "__MSG_extensionDescription__",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; connect-src https://127.0.0.1:27123 http://127.0.0.1:27124 https://localhost:27123 http://localhost:27124 https://generativelanguage.googleapis.com https://api.groq.com https://api.openai.com https: http: data:; style-src 'self'; img-src 'self' https: http: data: chrome-extension:; default-src 'none';"
  },
  "default_locale": "en",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "identity",
    "notifications",
    "offscreen",
    "favicon"
  ],
  "host_permissions": [
    "http://127.0.0.1:27123/*",
    "https://127.0.0.1:27123/*",
    "http://localhost:27123/*",
    "https://localhost:27123/*",
    "http://127.0.0.1:27124/*",
    "https://127.0.0.1:27124/*",
    "http://localhost:27124/*",
    "https://localhost:27124/*",
    "https://generativelanguage.googleapis.com/*",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/content/loader.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/extractor.js",
        "src/utils/retryHelper.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}